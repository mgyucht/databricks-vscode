{% macro args(method) -%}
{%- for arg in method.request_message().databricks_cli_ordered_args(method, tail=['headers']) %}
{{ arg }}{{ ", " if not loop.last else "" }}
{%- endfor %}
{%- endmacro %}

{% macro path(method) -%}
'{{ method.rpc_options()['path'] }}'
{%- if method.request_url_fields() %}
.format(
    {%- for field in method.request_url_fields() -%}
        {{ field.name() }}={{ field.name() }}{{ ", " if not loop.last else "" }}
    {%- endfor -%}
)
{% endif %}
{%- endmacro %}
